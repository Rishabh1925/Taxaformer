{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://taxaformer-1.onrender.com",
    "VITE_ML_API_URL": "https://taxaformer-1.onrender.com"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "https://taxaformer-1.onrender.com",
      "VITE_ML_API_URL": "https://taxaformer-1.onrender.com"
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}